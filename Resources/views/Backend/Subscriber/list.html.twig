{% extends 'SyliusNewsletterBundle:Backend:layout.html.twig' %}

{% block content %}

<h2>newsletters list.</h2>

{% for newsletter in newsletters %}

    id: {{ newsletter.id }} <br />
    name: {{ newsletter.name }} <br />
    description... <br />
    {{ newsletter.description }} <br />
    frontend link: <a href="{{ path('sylius_newsletter_newsletter_show', {'id': newsletter.id, 'slug': newsletter.slug}) }}">{{ newsletter.name }}</a>
    
    <ul>
        <li><a href="{{ path('sylius_newsletter_backend_newsletter_show', {'id': newsletter.id}) }}">details</a></li>
        <li><a href="{{ path('sylius_newsletter_backend_newsletter_update', {'id': newsletter.id}) }}">edit</a></li>
        <li><a href="{{ path('sylius_newsletter_backend_newsletter_delete', {'id': newsletter.id}) }}">delete</a></li>
    </ul>

{% endfor %}

    <br /> <br />
    {{ pagerfanta(paginator, 'default') }}

{% endblock %}
